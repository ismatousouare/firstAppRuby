<h1>Inscription</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
    <div class="mb-3">
        <%= form.label :prenom %>
        <%= form.text_field :prenom, class: "form-control", placeholder: "François" %>
    </div>
        <div class="mb-3">
        <%= form.label :nom %>
        <%= form.text_field :nom, class: "form-control", placeholder: "Lemane" %>
    </div>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "françois@gmail.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Créer un Utilisateur", class: "btn btn-primary" %>
    </div>
<% end %>